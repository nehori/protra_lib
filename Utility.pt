def Num(buyUnit,price)
         unit = Unit2(price)
         return (buyUnit / (unit * price)) * unit
end

//==================================================
// データの有無を確認
//==================================================
def PricedataExistCheck(data)
         return !data         //存在する場合 0を返す
end

//==================================================
// 買い（共通条件）
//==================================================
def Buying(i)
         if (0 == PricedataExistCheck({1}Open))
                  BuyingOpen(i,1)
         else
                  if (1 == PricedataExistCheck({2}Open))
                           BuyingClose(i,0)
                  else
                           BuyingOpen(i,2)
                  end
         end
end

//==================================================
// 売り（共通条件）
//==================================================
def Selling(i)
         if (0 == PricedataExistCheck({1}Open))
                  SellingOpen(i,1)
         else
                  if (1 == PricedataExistCheck({2}Open))
                           SellingClose(i,0)
                  else
                           SellingOpen(i,2)
                  end
         end
end

