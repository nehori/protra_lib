//==================================================
// 終値売り
//==================================================
def SellingClose(i,d)
         //PrintLog(Year + " " + Month +" " + Day + " i = " + i )
         if ($shortSelling)
                  {d}Buy(Close, $hold[i])
         else
                  {d}Sell(Close, $hold[i])
         end
//         Fee($hold[i] * Close)
         if ($Interest == 2)
                  $budget = $budget + {d}Close * $hold[i]
         elsif ($Interest == 1)
                  $budget = $budget + $buy[i] * $hold[i]
         end
         $hold[i] = 0
         Print("S 予算残り = " + $budget)
end

